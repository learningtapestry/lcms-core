<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= "LCMS Core - #{page_title}" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script>document.querySelector('html').className = 'js';</script>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbo-track': 'reload', defer: true %>
    <%= javascript_include_tag Ckeditor.cdn_url, "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <%= render partial: 'shared/header' %>
    <%= render partial: 'shared/flash' %>
    <div class="container-fluid">
      <%= yield %>
    </div>
    <%#= render partial: 'shared/footer' %>
  </body>
</html>
