<%= simple_form_for @query, url: admin_resources_path, html: { method: :get } do |f| %>
  <div class="row mb-lg-4">
    <div class="col">
      <%= f.input :grades, collection: Grades.grades,
                  input_html: { class: 'selectize', multiple: true },
                  label: t('.grades'), label_method: :humanize, required: false, wrapper: false %>
    </div>
    <div class="col">
      <%= f.input :curriculum_type, as: :select, required: false, label: t('.curriculum_types'),
                  collection: Resource::HIERARCHY,
                  input_html: { allow_blank: true } %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.input :slug_eq, label: false, required: false, input_html: { class: 'form-control', placeholder: t('.url_slug') } %>
    </div>
    <div class="col">
      <%= f.input :title_cont, label: false, required: false, input_html: { class: 'form-control', placeholder: t('.title') } %>
    </div>
    <div class="col">
      <%= f.button :submit, t('admin.common.search'), class: 'btn btn-warning', name: nil %>
    </div>
  </div>
<% end %>
