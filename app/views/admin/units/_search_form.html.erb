<%= simple_form_for :query, url: admin_units_path, html: { 'data-turbo-track': 'reload', method: :get } do |f| %>
  <div class="row mb-lg-2">
    <div class="col">
      <%= f.input :subject, label: 'Subject', required: false,
                  as: :select, include_blank: true,
                  collection: SUBJECTS.map { |key, val| [key, val] },
                  label_method: :last,
                  value_method: :first %>
    </div>
    <div class="col">
      <%= f.input :grades, collection: Grades.grades,
                  input_html: { class: 'selectize', multiple: true },
                  label: t('.grades'), label_method: :humanize, required: false, wrapper: false %>
    </div>
    <div class="col">
      <%= f.input :module, required: false, label: 'Module' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= f.input :sort_by, label: false,
                  required: false,
                  as: :select,
                  collection: %w(curriculum last_update),
                  include_blank: false,
                  label_method: ->(s){ "Order by #{s.titleize}" },
                  wrapper_html: { class: 'o-admin-sort-by' } %>
    </div>
    <div class="col">
      <%= f.button :submit, t('admin.common.search'), class: 'btn btn-warning', name: nil %>
    </div>
  </div>
<% end %>
