<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">
        <i class="bi bi-puzzle"></i>
        Plugin Demo - Tags
      </h1>

      <div class="alert alert-info">
        <h5 class="alert-heading">
          <i class="bi bi-info-circle"></i>
          About This Plugin
        </h5>
        <p class="mb-0">
          This is a demonstration plugin showing the plugin system capabilities.
          It displays all tags from the main application and can create a demo tag.
        </p>
      </div>

      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>
            <i class="bi bi-tags"></i>
            All Tags (<%= @tags.count %>)
          </span>
          <% unless @demo_tag_exists %>
            <%= button_to "Create Demo Tag",
                          create_demo_admin_plugin_demo_tags_path,
                          method: :post,
                          class: "btn btn-primary btn-sm" %>
          <% end %>
        </div>
        <div class="card-body">
          <% if @tags.any? %>
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Taggings Count</th>
                  <th>Demo Tag?</th>
                </tr>
              </thead>
              <tbody>
                <% @tags.each do |tag| %>
                  <tr class="<%= 'table-success' if tag.name == PluginDemo::TagService::DEMO_TAG_NAME %>">
                    <td><%= tag.id %></td>
                    <td>
                      <code><%= tag.name %></code>
                      <% if tag.name == PluginDemo::TagService::DEMO_TAG_NAME %>
                        <span class="badge bg-success ms-2">Created by Plugin</span>
                      <% end %>
                    </td>
                    <td><%= tag.taggings_count %></td>
                    <td>
                      <% if tag.name == PluginDemo::TagService::DEMO_TAG_NAME %>
                        <i class="bi bi-check-circle-fill text-success"></i> Yes
                      <% else %>
                        <i class="bi bi-dash text-muted"></i> No
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p class="text-muted mb-0">No tags found. Click "Create Demo Tag" to add one.</p>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <i class="bi bi-code-slash"></i>
          Plugin Information
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-3">Plugin Name</dt>
            <dd class="col-sm-9"><code>plugin_demo</code></dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9"><code>lib/plugins/plugin_demo/</code></dd>

            <dt class="col-sm-3">Routes</dt>
            <dd class="col-sm-9"><code>/admin/plugin-demo/tags</code></dd>

            <dt class="col-sm-3">Demo Tag Status</dt>
            <dd class="col-sm-9">
              <% if @demo_tag_exists %>
                <span class="badge bg-success">Exists (ID: <%= @demo_tag&.id %>)</span>
              <% else %>
                <span class="badge bg-secondary">Not Created</span>
              <% end %>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>